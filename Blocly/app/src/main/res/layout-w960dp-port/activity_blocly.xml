<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_activity_blocly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--android:layout_marginTop="?attr/actionBarSize">-->


            <FrameLayout
                android:id="@+id/fl_activity_blocly"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#51af44" />
                <!--android:layout_marginTop="?attr/actionBarSize"/>-->


            <FrameLayout
                android:id="@+id/fl_activity_blocly_bottom_pane"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:background="@color/white_primary"
                android:elevation="4dp"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_nav_activity_blocly"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:layout_gravity="left"/>

</android.support.v4.widget.DrawerLayout>